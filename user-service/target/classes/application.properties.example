spring.datasource.url=jdbc:mysql://127.0.0.1:3306/tunistudent?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.username=root
spring.datasource.password=YOUR_DATABASE_PASSWORD
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

spring.jackson.serialization.WRITE_DATES_AS_TIMESTAMPS=false

# JWT (Base64-encoded 256-bit key; replace with your own)
# Generate a secure secret: openssl rand -base64 32
tunistudent.jwt.secret=YOUR_BASE64_ENCODED_JWT_SECRET_KEY_HERE
tunistudent.jwt.expiration-ms=604800000

# CORS
app.cors.allowed-origins=http://localhost:4200,http://127.0.0.1:4200,http://localhost:5173
app.cors.allowed-origin-patterns=http://localhost:*,http://127.0.0.1:*,http://192.168.*.*:*

server.port=8080

